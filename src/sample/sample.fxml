<GridPane alignment="center" hgap="10" prefHeight="888.0" prefWidth="888.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
